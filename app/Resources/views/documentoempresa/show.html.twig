{% extends 'base.html.twig' %}

{% block body %}
    <h1>DocumentoEmpresa</h1>

    <table>
        <tbody>
            <tr>
                <th>Descripcion</th>
                <td>{{ documentoEmpresa.descripcion }}</td>
            </tr>
            <tr>
                <th>Ruta</th>
                <td>{{ documentoEmpresa.ruta }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{% if documentoEmpresa.fecha %}{{ documentoEmpresa.fecha|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ documentoEmpresa.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('documentoempresa_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('documentoempresa_edit', { 'id': documentoEmpresa.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
