{% extends 'base.html.twig' %}

{% block body %}
    <h1>Registro list</h1>

    <table>
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Codigoregistro</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for registro in registros %}
            <tr>
                <td><a href="{{ path('registro_show', { 'id': registro.id }) }}">{{ registro.fecha }}</a></td>
                <td>{{ registro.codigoRegistro }}</td>
                <td>{{ registro.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('registro_show', { 'id': registro.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('registro_edit', { 'id': registro.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('registro_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
