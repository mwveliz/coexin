{% extends 'base.html.twig' %}

{% block body %}
    <h1>Producto</h1>

    <table>
        <tbody>
            <tr>
                <th>Denominacioncomercial</th>
                <td>{{ producto.denominacionComercial }}</td>
            </tr>
            <tr>
                <th>Unidadmedida</th>
                <td>{{ producto.unidadMedida }}</td>
            </tr>
            <tr>
                <th>Procesoproductivoliteral</th>
                <td>{{ producto.procesoProductivoLiteral }}</td>
            </tr>
            <tr>
                <th>Isactive</th>
                <td>{% if producto.isActive %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ producto.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('producto_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('producto_edit', { 'id': producto.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
