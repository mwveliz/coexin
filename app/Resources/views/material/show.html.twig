{% extends 'base.html.twig' %}

{% block body %}
    <h1>Material</h1>

    

     
         
        <table class="table table-striped table-bordered table-hover dt-responsive" width="70%" id="sample_2">
<tbody>
     
         
            <tr>
                <th>Descripcion</th>
                <td>{{ material.descripcion }}</td>
            </tr>
            <tr>
                <th>Materialnacional</th>
                <td>{% if material.materialNacional %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Incidenciasobrecosto</th>
                <td>{{ material.incidenciaSobreCosto }}</td>
            </tr>
            <tr>
                <th>Nombreproductor</th>
                <td>{{ material.nombreProductor }}</td>
            </tr>
            <tr>
                <th>Nombreproveedor</th>
                <td>{{ material.nombreProveedor }}</td>
            </tr>
            <tr>
                <th>Isactive</th>
                <td>{% if material.isActive %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                
              
            </tr>
        </tbody>
   </table>

     
         {{ form_start(delete_form) }}

     
         
            <a href="{{ path('material_index') }}" class="btn btn-warning" role="button">Cancelar</a>
         
         
            <a href="{{ path('material_edit', { 'id': material.id }) }}" class="btn btn-info" role="button">Editar</a>
         
         
            
                <button type="submit" class="btn btn-danger">Eliminar</button>
            {{ form_end(delete_form) }}
         
     
{% endblock %}
