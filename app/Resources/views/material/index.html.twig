{% extends 'base.html.twig' %}

{% block body %}
       <h1>Materiales</h1>
    <!-- BEGIN CONTAINER -->
        <div class="page-container">
            <!-- BEGIN CONTENT -->
                    <div class="row">
                       <div class="col-xs-12 col-sm-12        col-md-12 col-lg-12 ">
                            <a class="btn btn-success" href="{{ path('material_new') }}" ><span>Agregar</span></a>
                            <br><br>                            
                            <!-- BEGIN EXAMPLE TABLE PORTLET-->
                            <div class="portlet light bordered">
                                <div class="portlet-title">
                                    <div class="caption font-green">
                                        <i class="icon-settings font-green"></i>
                                        <span class="caption-subject bold uppercase"></span>
                                    </div>
                                    <div class="tools"> </div>
                                </div>
                                <div class="portlet-body">
                                    <table class="table table-striped table-bordered table-hover dt-responsive" width="100%" id="sample_1">
                                        <thead>
                                            <tr>
                                                <th class="all" width="10%">Detalle</th>
                                                <th class="all" width="10%">Editar</th>
                                                <th class="all">Descripición</th>
                                                <th class="all">Código Arancelario</th>
                                                <th class="all">Material Importado</th>
                                                
                                                
                                            </tr>
                                        </thead>
                                        <tbody>
                                        {% for Material in materials%}
                                            <tr>
                                                <td>
                                                    <center>
                                                        <a href="{{ path('material_show', { 'id': Material.id }) }}">
                                                            <i class="glyphicon glyphicon-search"></i>
                                                        </a>      
                                                    </center>
                                                </td>
                                                    <td>
                                                    <center>
                                                        <a href="{{ path('material_edit', { 'id': Material.id }) }}">
                                                            <i class="glyphicon glyphicon-pencil"></i>
                                                        </a>      
                                                    </center>
                                                </td>
                                            
                                                <td>{{ Material.descripcion}}</td>
                                               <td>{{ Material.idCodigoArancelario }}</td>  
                                               <td>{% if Material.materialNacional%}Sí{% else %}No{% endif %}</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>                                        
                                    </table>
                                </div>
                            </div>
                            <!-- END EXAMPLE TABLE PORTLET-->
                        </div>
                        
                    </div>
                                    
                                        
            <!-- END CONTENT BODY -->
            
        </div>                                      
        <!-- END CONTAINER -->
        
{% endblock %}
